<Page
    x:Class="LockscreenGif.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LockscreenGif.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid MaxWidth="1000" Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Header  -->
            <RowDefinition Height="Auto" />
            <!--  Prerequisites  -->
            <RowDefinition Height="*" />
            <!--  Pivot content  -->
            <RowDefinition Height="Auto" />
            <!--  Remove section  -->
            <RowDefinition Height="Auto" />
            <!--  Apply button  -->
        </Grid.RowDefinitions>

        <!--  1) Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,12"
            Style="{ThemeResource TitleTextBlockStyle}"
            Text="Lockscreen Gif" />

        <!--  2) Prerequisites Section  -->
        <Expander
            Grid.Row="1"
            Margin="0,0,0,16"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Header="Getting Started">
            <StackPanel Margin="0,8,0,0" Spacing="12">
                <TextBlock
                    Foreground="{StaticResource TextFillColorSecondaryBrush}"
                    Text="Follow these steps before using the application:"
                    TextWrapping="Wrap" />

                <!--  Step 1  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,12,0"
                        VerticalAlignment="Top"
                        Background="{StaticResource AccentFillColorDefaultBrush}"
                        CornerRadius="16">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextOnAccentFillColorPrimaryBrush}"
                            Text="1" />
                    </Border>
                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock FontWeight="SemiBold" Text="Set a default lockscreen in Windows Settings (Only required for the first time)" />
                        <TextBlock
                            Foreground="{StaticResource TextFillColorSecondaryBrush}"
                            Text="Open Windows Settings → Personalization → Lock screen, change lockscreen type to 'Picture' and set an initial image"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

                <!--  Step 2  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,12,0"
                        VerticalAlignment="Top"
                        Background="{StaticResource AccentFillColorDefaultBrush}"
                        CornerRadius="16">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextOnAccentFillColorPrimaryBrush}"
                            Text="2" />
                    </Border>
                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock FontWeight="SemiBold" Text="Choose your GIF source" />
                        <TextBlock
                            Foreground="{StaticResource TextFillColorSecondaryBrush}"
                            Text="Either choose a video to convert to a GIF or select an existing GIF file from your device"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

                <!--  Step 3  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,12,0"
                        VerticalAlignment="Top"
                        Background="{StaticResource AccentFillColorDefaultBrush}"
                        CornerRadius="16">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextOnAccentFillColorPrimaryBrush}"
                            Text="3" />
                    </Border>
                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock FontWeight="SemiBold" Text="Apply and enjoy" />
                        <TextBlock
                            Foreground="{StaticResource TextFillColorSecondaryBrush}"
                            Text="Click the Apply button to set your animated GIF as your lockscreen wallpaper"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

                <!--  Step 4  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,12,0"
                        VerticalAlignment="Top"
                        Background="{StaticResource AccentFillColorDefaultBrush}"
                        CornerRadius="16">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextOnAccentFillColorPrimaryBrush}"
                            Text="4" />
                    </Border>
                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock FontWeight="SemiBold" Text="Resetting back to a regular lockscreen" />
                        <TextBlock
                            Foreground="{StaticResource TextFillColorSecondaryBrush}"
                            Text="Click the 'Remove' button in the app to reset to the image you previously selected as your lockscreen."
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Expander>

        <ScrollView
            Grid.Row="2"
            IsTabStop="True"
            VerticalScrollBarVisibility="Auto">
            <Grid MaxWidth="1000" Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!--  GIF preview  -->
                    <RowDefinition Height="Auto" />
                    <!--  Pivot content  -->
                </Grid.RowDefinitions>
                <!--  GIF preview  -->
                <Border
                    Grid.Row="0"
                    Width="533"
                    Height="300"
                    Background="{StaticResource SystemFillColorAttentionBackground}"
                    BorderBrush="{StaticResource SystemAltLowColor}"
                    BorderThickness="4"
                    CornerRadius="{StaticResource ControlCornerRadius}">
                    <Image x:Name="currentImage" Stretch="Fill" />
                </Border>

                <!--  2) Pivot: two tabs, one for GIF, one for Video  -->
                <winui:Pivot Grid.Row="1">
                    <!--  2a) Convert Video  -->
                    <winui:PivotItem Header="Video to GIF">
                        <StackPanel Spacing="16">

                            <!--  Browse Video panel  -->
                            <Grid
                                Padding="24"
                                Background="{StaticResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="{StaticResource ControlCornerRadius}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Margin="0,0,24,0"
                                    Glyph="&#xE714;" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{ThemeResource BodyStrongTextBlockStyle}"
                                    Text="Select a video to convert" />
                                <Button
                                    Grid.Column="2"
                                    Padding="32,8"
                                    Click="OpenVideoButton_click"
                                    Content="Browse Video" />
                            </Grid>

                            <!--  Video preview  -->
                            <MediaPlayerElement
                                x:Name="VideoPreview"
                                MaxWidth="560"
                                AreTransportControlsEnabled="True"
                                Visibility="Collapsed">
                                <MediaPlayerElement.TransportControls>
                                    <MediaTransportControls
                                        IsCompact="True"
                                        IsVolumeButtonVisible="False"
                                        IsVolumeEnabled="False"
                                        IsZoomButtonVisible="False" />

                                </MediaPlayerElement.TransportControls>
                            </MediaPlayerElement>

                            <!--  Scrub controls  -->
                            <StackPanel
                                x:Name="TrimControlsPanel"
                                Spacing="8"
                                Visibility="Collapsed">
                                <TextBlock FontWeight="SemiBold" Text="Trim range:" />
                                <local:CustomRangeSelector
                                    x:Name="TrimSelector"
                                    Maximum="1"
                                    Minimum="0"
                                    RangeDragging="TrimSelector_RangeDragging"
                                    RangeEnd="1"
                                    RangeStart="0"
                                    StepFrequency="1"
                                    ThumbDragCompleted="TrimSelector_ThumbDragCompleted"
                                    ThumbDragStarted="TrimSelector_ThumbDragStarted"
                                    ValueChanged="TrimSelector_ValueChanged" />

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        x:Name="StartTimeTextBox"
                                        Grid.Column="0"
                                        Width="100"
                                        LostFocus="StartTimeTextBox_LostFocus"
                                        PlaceholderText="mm:ss.f"
                                        Text="00:00.0" />

                                    <TextBox
                                        x:Name="EndTimeTextBox"
                                        Grid.Column="2"
                                        Width="100"
                                        LostFocus="EndTimeTextBox_LostFocus"
                                        PlaceholderText="mm:ss.f"
                                        Text="00:00.0" />
                                </Grid>
                            </StackPanel>

                            <StackPanel
                                x:Name="ComboSettingsStack"
                                Margin="0,16,0,0"
                                Spacing="8"
                                Visibility="Collapsed">
                                <!--  Settings row  -->
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <StackPanel>
                                        <TextBlock FontWeight="SemiBold" Text="Resolution" />
                                        <ComboBox
                                            x:Name="ComboResolution"
                                            Width="160"
                                            SelectionChanged="ComboResolution_SelectionChanged" />
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock FontWeight="SemiBold" Text="Frame rate" />
                                        <ComboBox
                                            x:Name="ComboFps"
                                            Width="100"
                                            SelectionChanged="ComboResolution_SelectionChanged" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>


                            <!--  Generate button  -->
                            <InfoBar
                                x:Name="FileSizeWarning"
                                Title="Free space requirement"
                                IsClosable="False"
                                IsOpen="False"
                                Message=""
                                Severity="Warning" />
                            <Button
                                x:Name="GenerateButton"
                                HorizontalAlignment="Right"
                                Click="GenerateButton_Click"
                                Content="Generate GIF"
                                IsEnabled="False" />
                            <ProgressBar
                                x:Name="GenerateLoading"
                                Visibility="Collapsed"
                                Value="0" />

                        </StackPanel>
                    </winui:PivotItem>

                    <!--  2b) Use existing GIF  -->
                    <winui:PivotItem Header="Use GIF">
                        <StackPanel Spacing="16">

                            <!--  Browse GIF panel  -->
                            <Grid
                                Padding="24"
                                Background="{StaticResource SystemFillColorNeutralBackgroundBrush}"
                                CornerRadius="{StaticResource ControlCornerRadius}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Margin="0,0,24,0"
                                    Glyph="&#xE8B9;" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{ThemeResource BodyStrongTextBlockStyle}"
                                    Text="Select a GIF file to set as lockscreen" />
                                <Button
                                    Grid.Column="2"
                                    Padding="32,8"
                                    Click="OpenGifButton_click"
                                    Content="Browse GIF" />
                            </Grid>

                        </StackPanel>
                    </winui:PivotItem>
                </winui:Pivot>
            </Grid>
        </ScrollView>

        <!--  3) Remove Section: Clear saved animated GIFs and revert to default  -->
        <Grid
            Grid.Row="3"
            Margin="0,12,0,12"
            Padding="16"
            Background="{StaticResource SystemFillColorCriticalBackgroundBrush}"
            CornerRadius="{StaticResource ControlCornerRadius}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock FontWeight="SemiBold" Text="Remove Animated Lockscreen" />
                <TextBlock
                    Foreground="{StaticResource TextFillColorSecondaryBrush}"
                    Text="This will clear any saved animated GIFs and revert back to your existing lockscreen"
                    TextWrapping="Wrap" />
            </StackPanel>

            <Button
                x:Name="removeAnimatedLockscreen"
                Grid.Column="1"
                VerticalAlignment="Center"
                Click="RemoveAnimatedLockscreenButton_click"
                Content="Remove" />
        </Grid>

        <!--  4) Bottom Row: Apply button  -->
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="8">

            <!--  apply button  -->
            <Button
                x:Name="ApplyButton"
                Click="SetLockscreenButton_click"
                Content="Apply"
                IsEnabled="False"
                Style="{StaticResource AccentButtonStyle}" />

            <!--  help icon button  -->
            <Button
                x:Name="HelpButton"
                Width="32"
                Height="32"
                Padding="0"
                ToolTipService.Placement="Top">
                <FontIcon
                    Grid.Column="0"
                    FontSize="16"
                    Glyph="&#xE897;" />
                <Button.Flyout>
                    <Flyout Placement="Top">
                        <TextBlock
                            MaxWidth="200"
                            Margin="8"
                            Text="Lockscreen not showing after you apply? Try manually setting one in the Windows settings first then trying to apply."
                            TextWrapping="Wrap" />
                    </Flyout>
                </Button.Flyout>
            </Button>

        </StackPanel>
    </Grid>
</Page>
